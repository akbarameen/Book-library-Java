<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingHorizontal="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:alpha="0.1"
        android:elevation="25dp"
        android:translationZ="1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="8dp"
        android:translationZ="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:elevation="25dp"

            app:cardBackgroundColor="@color/book_row_card"
            app:cardCornerRadius="5sp"
            app:cardUseCompatPadding="true">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bookcover"

                />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <!--                    <TextView-->
                <!--                        android:id="@+id/txtBCount"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text="122"-->
                <!--                        android:textSize="17sp"-->
                <!--                        android:layout_marginEnd="0dp"-->
                <!--                        android:textAlignment="center"-->
                <!--                        android:textColor="@color/white"-->


                <!--                        android:textStyle="bold"/>-->

                <!--                    <TextView-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:text=" - "-->
                <!--                        android:textColor="@color/white"-->
                <!--                        android:textSize="18sp"/>-->

                <TextView
                    android:id="@+id/txtBTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Book Title"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:id="@+id/txtBAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="Author Name"
                android:fontFamily="sans-serif-condensed-light"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/book_author"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:alpha="0.6"
                    android:src="@drawable/ic_baseline_pages_24" />

                <TextView
                    android:id="@+id/txtBPages"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:text="200"
                    android:textAlignment="center"
                    android:textColor="@color/book_pages"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:paddingTop="5dp"
                    android:backgroundTint="#00000000"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:drawableTint="#FBC02D"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingHorizontal="10dp"
                    android:text="Edit"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FBC02D" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#00000000"
                    android:drawableEnd="@drawable/ic_all_delete_24"
                    android:drawableTint="#D32F2F"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingHorizontal="15dp"
                    android:text="Delete"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"

                    android:textColor="#D32F2F" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>